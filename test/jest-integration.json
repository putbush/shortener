{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".integration.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts"
  ],
  "coverageDirectory": "../coverage",
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@infra/(.*)$": "<rootDir>/../src/infra/$1",
    "^@/(.*)$": "<rootDir>/../src/$1"
  }
}
